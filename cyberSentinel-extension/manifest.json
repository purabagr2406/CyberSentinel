{
  "manifest_version": 3,
  "name": "CyberSentinel",
  "version": "0.0",

  "description": "desc 1 sectance",

  "icons": {
    "16": "./extension-icon.png",
    "48": "./extension-icon.png",
    "128": "./extension-icon.png"
  },

  "action": {
    "default_popup": "frontend/dist/index.html",
    "default_title": "CyberSentinel",
    "default_icon": "extension-icon.png"
  },
  
  "permissions": [
    "storage" 
  ],

  "host_permissions": [
    "https://teams.microsoft.com/*",
    "https://*.teams.microsoft.com/*", 
		"https://teams.live/v2/*",
		"https://*.teams.live/v2/*",
    "http://localhost:5000/*" 
  ],

  "content_scripts": [
    {
      "matches": [
        "https://teams.microsoft.com/*",
        "https://*.teams.microsoft.com/*",
				"https://teams.live.com/v2/*",
				"https://*.teams.live.com/v2/*"
      ],
      "js": ["content-script.js"]
    }
  ]
}